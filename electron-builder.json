{
  "appId": "com.arduino.updater",
  "productName": "Arduino Updater",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron/**/*",
    "build/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "public/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  }
} 